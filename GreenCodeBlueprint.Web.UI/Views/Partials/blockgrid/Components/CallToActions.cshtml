@inherits UmbracoViewPage<BlockGridItem<CallToActions>>

<div class="bg-bianca-100">
    <div class="max-w-[1600px] px-6 py-12 relative z-20 mx-auto w-full">
        @if (!string.IsNullOrEmpty(Model.Content.Title))
        {
            <h2 class="font-display mb-12 text-center text-5xl font-bold">@Model.Content.Title &rarr;</h2>
        }

        <div class="gap-6 grid lg:grid-cols-2 xl:grid-cols-4">
            @foreach (BlockListItem<CallToActionItem> item in Model.Content.CallToActionItems)
            {
                <a class="bg-bianca-50 p-4 rounded group hover:bg-white drop-shadow-sm hover:drop-shadow-lg transition" href="@item.Content.CallToActionLink?.Url">
                    @if (item.Content.Image != null)
                    {
                        <img src="@item.Content.Image.GetCropUrl(800, 800)" class="mb-6 rounded" width="400" height="400" loading="lazy" />
                    }
                    <div>
                        <p class="lead text-xl font-bold group-hover:text-mantis-600 transition">@item.Content.Title</p>
                        @if (item.Content.CallToActionLink != null)
                        {
                            <span class="text-neutral-600 hover:text-neutral-950 transition">@item.Content.CallToActionLink.Name &rarr;</span>
                        }
                    </div>
                </a>
            }
        </div>
    </div>
</div>